<% if (success && success.length) { %>
<div
  class="alert alert-success alert-dismissible fade show d-flex align-items-center gap-3 p-3 rounded shadow-sm"
  role="alert"
  style="font-size: 1rem"
>
  <svg
    class="bi flex-shrink-0"
    width="24"
    height="24"
    role="img"
    aria-label="Success:"
  >
    <use xlink:href="#check-circle-fill" />
  </svg>
  <div class="flex-grow-1"><%= success %></div>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
