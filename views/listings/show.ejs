<% layout("/layouts/boilerplate.ejs") %>
<body>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <br />
        <h3 class="card-title mb-3">Listing Details</h3>
        <br />
        <img
          src="<%= listing.image %>"
          class="card-img-top show_img"
          alt="listing-image"
        />
        <br />
        <div class="card-body">
          <p class="card-text">
            <strong><%= listing.title %></strong><br />
            <%= listing.description %><br />
            â‚¹ <%= listing.price.toLocaleString("en-IN") %><br />
            <%= listing.country %><br />
            <%= listing.location %>
          </p>
        </div>
        <br />

        <div class="card-footer d-flex">
          <a href="/listing/<%= listing._id %>/edit" class="btn btn-primary"
            >Edit</a
          >

          <form
            action="/listing/<%= listing._id %>?_method=DELETE"
            method="POST"
          >
            <button class="btn btn-danger">Delete</button>
          </form>
        </div>
        <br />
      </div>
    </div>
  </div>
</body>
